    <style name="toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">#f5f5f5</item>

    </style>

</resources>


