<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CompanyListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/toolbar"
            android:clickable="true"
            android:fitsSystemWindows="true"
            android:focusable="true"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed"
             />

    </com.google.android.material.appbar.AppBarLayout>

    <ru.amk.company_list.list.CompanyListViewImpl
        android:id="@+id/company_list_rw"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorite_to_up_switch"
        app:layout_constraintVertical_bias="1.0"
        tools:listitem="@layout/item_company" />

    <TextView
        android:id="@+id/sort_by_name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:gravity="start"
        android:paddingStart="24dp"
        android:text="@string/by_name"
        android:textColor="@color/gray600"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/sort_by_secid_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sort_by_secid_text_view"
        app:layout_constraintWidth_percent="0.3" />


    <TextView
        android:id="@+id/sort_by_secid_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:paddingStart="24dp"
        android:text="@string/by_secid"
        android:textColor="@color/dark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_to_up_switch"
        app:layout_constraintStart_toEndOf="@+id/sort_by_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintWidth_percent="0.34" />

    <ImageButton
        android:id="@+id/name_order_right_image_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/name_order_reverse_image_button"
        app:layout_constraintEnd_toStartOf="@+id/name_order_reverse_image_button"
        app:layout_constraintTop_toTopOf="@+id/name_order_reverse_image_button"
        app:srcCompat="@drawable/arrow_down_not_select" />

    <ImageButton
        android:id="@+id/secid_order_right_image_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/name_order_reverse_image_button"
        app:layout_constraintEnd_toStartOf="@+id/secid_order_reverse_image_button"
        app:layout_constraintTop_toTopOf="@+id/name_order_reverse_image_button"
        app:srcCompat="@drawable/arrow_down_select" />


    <ImageButton
        android:id="@+id/name_order_reverse_image_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/sort_by_name_text_view"
        app:layout_constraintEnd_toEndOf="@+id/sort_by_name_text_view"
        app:layout_constraintTop_toTopOf="@+id/sort_by_name_text_view"
        app:srcCompat="@drawable/arrow_up_not_select" />

    <ImageButton
        android:id="@+id/secid_order_reverse_image_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/secid_order_right_image_button"
        app:layout_constraintEnd_toEndOf="@+id/sort_by_secid_text_view"
        app:layout_constraintTop_toTopOf="@+id/secid_order_right_image_button"
        app:srcCompat="@drawable/arrow_up_not_select" />

    <CheckBox
        android:id="@+id/favorite_to_up_switch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="@string/favorite_to_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sort_by_secid_text_view"
        app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
        app:layout_constraintWidth_percent="0.32"
        tools:ignore="UseSwitchCompatOrMaterialXml" />


</androidx.constraintlayout.widget.ConstraintLayout>